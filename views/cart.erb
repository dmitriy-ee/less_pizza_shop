<h2> Your cart </h2>

<table class="table">
			  <thead class="thead-light">
				<tr>
				  <!--th scope="col">#</th-->
				  <th scope="col">Name</th>
				  <th scope="col">Price $</th>
				  <th scope="col">Qty</th>
				</tr>
			  </thead>
			  <tbody>
			  <% total_price = 0 %>
			  <% total_qty = 0 %>
			  <%@items.each do |item| %>
				<tr>
				  <!--th scope="row">1</th-->
				  <td><%= item[0].title %></td>
				  <td><%= item[0].price %></td>
				  <td><%= item[1] %></td>
				</tr>
				<% total_price += item[0].price * item[1].to_i %>
				<% total_qty += item[1].to_i %>
				<%end%>	

				<tr>
				  <!--th scope="row">1</th-->
				  <td></td>
				  <td><%= total_price %> $</td>
				  <td><%= total_qty %></td>
				</tr>

			  </tbody>
			</table>

<form action = "/place_order" method ="POST" role = "form">
	<input name="order[orders_input]" type="hidden" value="<%= orders_input %>"/>
	<div class="form-group">
		<label> Enter you name: </label>
		<input name="order[name]" type="text" class="form-control" placeholder="You name">
	</div>

	<div class="form-group">
		<label> Enter you phone: </label>
		<input name="order[phone]" type="text" class="form-control" placeholder="You phone">
	</div> 

	<div class="form-group">
		<label> Enter you address: </label>
		<input name="order[address]" type="text" class="form-control" placeholder="You address">
	</div>

<button type="submit" class="btn btn-success btn-lg">Place this order!</button>